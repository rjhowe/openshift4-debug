apiVersion: build.openshift.io/v1
kind: BuildConfig
metadata:
  name: logrotate
  namespace: openshift4-debug
  labels:
    app: openshift4-debug
spec:
  output:
    to:
      kind: ImageStreamTag
      name: logrotate:latest
  source:
    dockerfile: |
      FROM registry.access.redhat.com/ubi8
      RUN yum install logrotate -y && \
          yum clean all
      COPY ./entrypoint /root/
      RUN chmod 741 /root/entrypoint.sh
      CMD ["/root/entrypoint.sh"]
    type: Dockerfile
    configMaps:
    - configMap:
        name: logrotate-entrypoint
      destinationDir: entrypoint
  strategy:
    dockerStrategy: {}
    type: Docker
  triggers:
  - type: ConfigChange
